{{>layout/header}}
<h1>전체</h1>
<h1>게시글 리스트</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/community/postsave" role ="button" class="btn btn-primary">글등록</a>
        </div>
    </div>
    <br>
<!--게시글 리스트 조회-->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">제목</th>
            <th scope="col">작성일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td><a href="/community/{{postId}}">{{title}}</a></td>
                <td>{{createdAt}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}