{{>layout/header}}
<div class="container">
    <h1>게시글 상세</h1>
    <br/>
    <form>
        <div>
            <input type="hidden" id="postId" value="{{posts.postId}}">
        </div>
        <div class="form-group">
            <h1>{{posts.title}}<h1>
        </div>
        <div class="form-group">
            <label>작성자</label>
        </div>
            <div class="form-group">{{{posts.contents}}}</div>
        <div class="form-group">
            <a href="/community" role="button" class="btn btn-secondary">취소</a>
            <a href="/community/update/{{posts.postId}}" role="button" class="btn btn-primary">수정</a>
        </div>
    </form>
</div>
{{>layout/footer}}