            <td class="tg-0lax"><a href="http://localhost:8080/summoners/kr?name={{adUser1}}">{{adUser1}}</a></td>
            <td class="tg-0lax"><img src="http://ddragon.leagueoflegends.com/cdn/13.9.1/img/champion/{{adChampName2}}.png"></td>
            <td class="tg-0lax"><a href="http://localhost:8080/summoners/kr?name={{adUser2}}">{{adUser2}}</a></td>
        </tr>
        <tr>
            <td class="tg-0lax">{{gameMinutes}}분 {{gameSeconds}}초</td>
            <td class="tg-0lax">제어와드 {{visionWard}}</td>
            <td class="tg-0lax"><img src="http://ddragon.leagueoflegends.com/cdn/13.9.1/img/champion/{{supChampName1}}.png"></td>
            <td class="tg-0lax"><a href="http://localhost:8080/summoners/kr?name={{supUser1}}">{{supUser1}}</a></td>
            <td class="tg-0lax"><img src="http://ddragon.leagueoflegends.com/cdn/13.9.1/img/champion/{{supChampName2}}.png"></td>
            <td class="tg-0lax"><a href="http://localhost:8080/summoners/kr?name={{supUser2}}">{{supUser2}}</a></td>
        </tr>
        </tbody>
    </table>
{{/matchContainers}}
{{>layout/footer}}