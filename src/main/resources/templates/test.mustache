            <td class="tg-0lax"><a href="http://localhost:8080/summoners/kr?name={{midUser1}}">{{midUser1}}</a></td>
            <td class="tg-0lax"><img src="http://ddragon.leagueoflegends.com/cdn/13.9.1/img/champion/{{midChampName2}}.png"></td>
