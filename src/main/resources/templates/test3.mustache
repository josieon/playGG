{{>layout/header}}
<h1>Play.GG</h1>
<form action="/summoners/kr" method="get">
    <input type="text" name="name" placeholder="소환사명" size="30">
    <input type="submit" value="검색">
</form>
{{#noSummoner}}
    <table class="summoner-noSummoner" style="width: 100%; height: 100vh; display: flex; justify-content: center; align-items: flex-start;">
        <tr>
            <td >
                <p style="font-size: 30px; text-align: center; margin-top: 80px; font-weight: bold;">존재하지 않는 소환사명입니다.</p>
            </td>
        </tr>
    </table>
{{/noSummoner}}
{{#yesSummoner}}
    <table class="summoner-profile" style="border: none;">
        <tr>
            <td>
                <img class="profile-icon" src="http://ddragon.leagueoflegends.com/cdn/13.9.1/img/profileicon/{{profileIconId}}.png">
                <h3 class="summoner-name">{{name}}</h3>
                <p class="summoner-level">레벨 : {{summonerLevel}}</p>
            </td>
        </tr>
    </table>
{{/yesSummoner}}
<table>
    {{#unranked}}
        <tr>
            <td>
                <p class="summoner-rank unranked">UNRANKED</p>
            </td>
        </tr>
    {{/unranked}}
    {{#leagueEntryDTOS}}
        <tr>
            <td>
                <div class="summoner-rank" style="border: none;">
                    <p class="queue-type">{{queueType}}</p>
                    <img src="https://opgg-static.akamaized.net/images/medals_new/{{tier}}.png?image=q_auto,f_webp,w_144&v=1683869446164" width="200" height="200">
                    <p class="tier-rank">{{tier}} {{rank}}</p>
                    <p class="league-points">리그 포인트 : {{leaguePoints}}</p>
                    <p class="win-loss">{{total}}전 {{wins}}승 {{losses}}패</p>
                    <p class="win-percent">승률 {{winsPercent}}%</p>
                </div>
            </td>
        </tr>
    {{/leagueEntryDTOS}}
</table>
{{#noCurrentGame}}
